html(lang="en")
  head
    title Login form
    link(rel="stylesheet",href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css")
    link(rel="stylesheet",href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css")
    style.
      body{ padding-top:80px; }
  body
    .container
      .col-sm-6.col-sm-offset-3
        h1
          
          form(action="/profile/newPost",method="POST")
              .form-group
                label(for="title").
                  Title
                input#title.form-control(type="text",placeholder="Title",name="title")
              .form-group
                label(for="content").
                  Content
                textarea#content.form-control(type="text",placeholder="Type content here",rows="10",name="content")
              .form-group.row
              button.btn.btn-success.btn-lg(type="submit").
                  Submit
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
